{
    "actorSpecification": 1,
    "name": "tiktok-trend-hunter",
    "title": "TikTok Shop Viral Product Finder & AI Analyzer",
    "description": "Finds, analyzes, and scores viral products from TikTok Shop for e-commerce sellers and content creators. Uses AI to provide virality scores, marketing angles, and actionable insights.",
    "version": "0.1",
    "buildTag": "latest",
    "meta": {
        "templateId": "python-start"
    },
    "input": "./input_schema.json",
    "dockerfile": "../Dockerfile",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Product Analysis Results",
            "views": {
                "overview": {
                    "title": "Overview",
                    "transformation": {
                        "fields": [
                            "product_title",
                            "virality_score",
                            "price",
                            "sales_count",
                            "why_winning",
                            "product_url"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "product_title": {
                                "label": "Product",
                                "format": "text"
                            },
                            "virality_score": {
                                "label": "Virality Score",
                                "format": "number"
                            },
                            "price": {
                                "label": "Price",
                                "format": "text"
                            },
                            "sales_count": {
                                "label": "Sales",
                                "format": "number"
                            },
                            "why_winning": {
                                "label": "Why It's Winning",
                                "format": "text"
                            }
                        }
                    }
                }
            }
        }
    }
}
