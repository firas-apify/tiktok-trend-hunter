{
    "actorSpecification": 1,
    "name": "tiktok-trend-hunter",
    "title": "TikTok Shop Viral Product Finder & AI Analyzer",
    "description": "Discover winning products before they go viral. This AI-powered Actor scrapes TikTok Shop trending products, analyzes reviews for emotional triggers, and generates virality scores (0-100), marketing angles, and ad hooks. Perfect for dropshippers, e-commerce sellers, and content creators looking for the next big opportunity.",
    "version": "0.4",
    "icon": "./logo.png",
    "buildTag": "latest",
    "categories": ["E-COMMERCE", "MARKETING", "AI"],
    "seoTitle": "TikTok Shop Trend Hunter - Find Viral Products with AI Analysis",
    "seoDescription": "Scrape and analyze TikTok Shop trending products. Get AI-powered virality scores, marketing angles, emotional triggers, and ad hooks for dropshipping and e-commerce.",
    "meta": {
        "templateId": "python-start"
    },
    "input": "./input_schema.json",
    "output": "./output_schema.json",
    "dockerfile": "../Dockerfile",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Product Analysis Results",
            "views": {
                "overview": {
                    "title": "Overview",
                    "transformation": {
                        "fields": [
                            "product_title",
                            "virality_score",
                            "price",
                            "sales_count",
                            "why_winning",
                            "product_url"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "product_title": {
                                "label": "Product",
                                "format": "text"
                            },
                            "virality_score": {
                                "label": "Virality Score",
                                "format": "number"
                            },
                            "price": {
                                "label": "Price",
                                "format": "text"
                            },
                            "sales_count": {
                                "label": "Sales",
                                "format": "number"
                            },
                            "why_winning": {
                                "label": "Why It's Winning",
                                "format": "text"
                            }
                        }
                    }
                }
            }
        }
    }
}
